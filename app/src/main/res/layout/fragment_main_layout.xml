<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainfraglayout">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_photo"
        android:scaleType="center"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/main_fragment_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:layout_alignBottom="@+id/main_fragment_button"
        android:layout_toLeftOf="@+id/main_fragment_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:id="@+id/main_fragment_button"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/fragfab"
        android:layout_alignRight="@+id/fragfab"
        android:layout_alignEnd="@+id/fragfab" />


</RelativeLayout>