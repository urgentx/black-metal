<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainfraglayout">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragfab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@drawable/ic_add_photo"
        android:scaleType="center"
        android:layout_marginBottom="74dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_description"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:id="@+id/textView3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_description_2"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textView4" />

    <EditText
        android:id="@+id/main_fragment_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:layout_alignBottom="@+id/main_fragment_button"
        android:layout_alignRight="@+id/fragfab"
        android:layout_alignEnd="@+id/fragfab" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:id="@+id/main_fragment_button"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/main_fragment_edittext"
        android:layout_toEndOf="@+id/main_fragment_edittext" />


</RelativeLayout>